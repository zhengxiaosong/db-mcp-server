postgres.datasource.url=jdbc:postgresql://localhost:5432/your_db
postgres.datasource.username=your_user
postgres.datasource.password=your_password
postgres.datasource.maximumPoolSize=10
postgres.datasource.minimumIdle=2
postgres.datasource.idleTimeout=60000
postgres.datasource.connectionTimeout=30000
postgres.datasource.poolName=PostgresMcpHikariCP
